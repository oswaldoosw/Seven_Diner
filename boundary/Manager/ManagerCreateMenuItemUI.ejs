<!DOCTYPE html>
<html>

<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <link rel="shortcut icon" href="../images/favicon.png" type="">

  <title> Seven Diner </title>

  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="../css/bootstrap.css" />


  <!-- Custom styles for this template -->
  <link href="../css/style.css" rel="stylesheet" />
  <!-- responsive style -->
  <link href="../css/responsive.css" rel="stylesheet" />

</head>

<body class="sub_page">

    <div class="hero_area">
      <div class="bg-box">
        <img src="../images/hero-bg.jpg" alt="">
      </div>
      <header class="header_section">
        <div class="container">
          <nav class="navbar navbar-expand-lg custom_nav-container ">
            <a class="navbar-brand" href="/Manager">
              <span>
                Seven Diner
              </span>
            </a>
  
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class=""> </span>
            </button>
  
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav  mx-auto" style="padding-left:700px">
                
                <li class="nav-item">
                  <a class="nav-link" onclick="window.location.href='/LogoutController'">Log Out</a>
                
              </li>
              </ul>
              
            </div>
          </nav>
        </div>
      </header>
    </div>
    <!-- form section -->
    <section class="form_section layout_padding">
        <div class="container">
          <div class="heading_container">
            <h2>
              Create a Menu Item
            </h2>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form_container">
                <form method="post" action="/ManagerCreateMenuItemController">
                  <div>
                    <label>Menu Name: </label>
                    <input type="text" class="form-control" name="menuName" id="menuName" pattern="[a-zA-Z\s]+" title="Invalid menu name, must contain letters only" placeholder="Menu Item Name" required />
                  </div>
                  <div>
                    <label>Price (In Dollars): </label>
                    <input type="text" class="form-control" name="price" id="price" pattern="[0-9.]+" title="Invalid price, must contain numbers only" onchange="twoDecimals(this.value)" placeholder="Price" required/>
                  </div>
                  <div>
                    <label>Description: </label>
                    <input type="text" class="form-control" name="description" id="description" placeholder="Description" required />
                  </div>
                  <div>
                    <label>Food Type: </label>
                    <select class="form-control" name="type" id="type" required>
                          <option value="" disabled selected hidden>
                            food type
                          </option>
                          <option>
                            meat
                          </option>
                          <option>
                            vegetables
                          </option>
                          <option>
                            misc
                          </option>
                    </select>
                  </div>
                  <% if ( expressError.length > 0 ) { %>
                    <p id="flashMsg" class="error-msg"><%= expressError %> </p>
                <% } %>
                  <div class="btn_box">
                    <button class="yellow-button" type="submit">
                      Create Menu Item
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
    </section>


  <script>
    function twoDecimals(val) {
          var hello = parseFloat(val).toFixed(2);
          var string1 = hello.toString().replace(",", ".");
          document.getElementById("price").value = parseFloat(string1).toFixed(2);
        }
  </script>
  

</body>

</html>