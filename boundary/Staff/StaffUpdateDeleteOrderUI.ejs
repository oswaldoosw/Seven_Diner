<!DOCTYPE html>
<html>

<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <link rel="shortcut icon" href="../images/favicon.png" type="">

  <title> Seven Diner </title>

  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="../css/bootstrap.css" />


  <!-- Custom styles for this template -->
  <link href="../css/style.css" rel="stylesheet" />
  <!-- responsive style -->
  <link href="../css/responsive.css" rel="stylesheet" />
  <style>
    h3 {
      display:none;
    }
  </style>
</head>

<body class="sub_page">

    <div class="hero_area">
      <div class="bg-box">
        <img src="../images/hero-bg.jpg" alt="">
      </div>
      <header class="header_section">
        <div class="container">
          <nav class="navbar navbar-expand-lg custom_nav-container ">
            <a class="navbar-brand" href="/Staff">
              <span>
                Seven Diner
              </span>
            </a>
  
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class=""> </span>
            </button>
  
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav  mx-auto" style="padding-left:700px">
                
                <li class="nav-item">
                  <a class="nav-link" onclick="window.location.href='/LogoutController'">Log Out</a>
                
              </li>
              </ul>
              
            </div>
          </nav>
        </div>
      </header>
    </div>
    <section class="form_section layout_padding">
        <div class="container">
          <div class="heading_container">
            <h2>
              Update Order
            </h2>
          </div>
          <h5 style="padding-top: 1px;">
            Please enter an order ID:
          </h5>
            <form action="/StaffSearchUpdateOrder" method="post">
              <div>
                <input style="width:25%" type="text" class="form-control" name="orderID" id="orderID" placeholder="Order ID" />
              </div>
              <div>
                <button class="yellow-button" type="submit">
                  Search
                </button>
              </div>
              <br/>
              <br/>
              <% if ( expressSuccess.length > 0 ) { %>
                <p id="flashMsg" class="success-msg"><%= expressSuccess %> </p>
            <% } %>
             </form>
         
             <div style="background-color:white;">
              <table id="table1" border="1" style="width:100%">
                <thead>
                  <tr style="background-color:orange;">
                    <th>Order ID</th>
                    <th>Menu List</th>
                    <th>Total Price</th>
                    <th>Payment Method</th>
                    <th>CC Number</th>
                    <th>Order Date</th>
                    <th>Table Number</th>
                    <th></th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% if(data.length> 0) { %>
  
                    <% data.forEach(function(order) { %>
                      <tr>
                        <form method="post" action="/StaffUpdateOrderController">
                        <td>
                            <input type="hidden" name="orderID" value=<%= order.orderID %>><%= order.orderID %>
                        </td>
                        <td>
                            <input style="width:200px" type="text" name="menuList" value="<%= order.menuList %>">
                        </td>
                        <td>
                            <input style="width:100px" type="text" name="totalPrice" value=<%= order.totalPrice %>>
                        </td>
                        <td>
                            <input style="width:130px" type="text" name="paymentMethod" value="<%= order.paymentMethod %>">
                        </td>
                        <td>
                          <input type="text" name="ccNumber" value="<%= order.ccNumber %>">
                        </td>
                        <td>
                            <%= order.orderDate %>
                        </td>
                        <td>
                          <input style="width:50px" type="text" name="tableNumber" value="<%= order.tableNumber %>">
                      </td>
                        <td>
                            <button type="submit">
                              Update
                            </button>
                          </td>
                        </form>
                        <form method="post" action="/StaffDeleteOrderController">
                          <td>
                            <input type="hidden" name="orderID" value=<%= order.orderID %>>
                            <button type="submit">
                              Delete
                            </button>
                          </td>
                        </form>
                      </tr>
                      <% }); %>
      
                  <% } else { %>
                      <h3>No Results</h3>
                  <% } %>
                </tbody>
              </table>
            </div>
        </div>
    </section>
    <script src="../js/jquery-3.4.1.min.js"></script>
    <!-- bootstrap js -->
    <script src="../js/bootstrap.js"></script>
    <!-- isotope js -->
    <script src="https://unpkg.com/isotope-layout@3.0.4/dist/isotope.pkgd.min.js"></script>
    <!-- custom js -->
    <script src="../js/custom.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" ></script>
    <script>
      $(document).ready(function () {
        $('#table1').DataTable({
          "bFilter": false,
          "lengthChange": false
      });
    });
    </script>
</body>
</html>