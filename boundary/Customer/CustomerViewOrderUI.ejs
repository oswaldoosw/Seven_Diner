<!DOCTYPE html>
<html>

<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <link rel="shortcut icon" href="../images/favicon.png" type="">

  <title> Seven Diner </title>

  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="../css/bootstrap.css" />


  <!-- Custom styles for this template -->
  <link href="../css/style.css" rel="stylesheet" />
  <!-- responsive style -->
  <link href="../css/responsive.css" rel="stylesheet" />

</head>

<body class="sub_page">

    <div class="hero_area">
      <div class="bg-box">
        <img src="../images/hero-bg.jpg" alt="">
      </div>
      <header class="header_section">
        <div class="container">
          <nav class="navbar navbar-expand-lg custom_nav-container ">
            <a class="navbar-brand" href="/">
              <span>
                Seven Diner
              </span>
            </a>
  
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class=""> </span>
            </button>
  
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav  mx-auto" style="padding-left:700px">
                
              </ul>
              
            </div>
          </nav>
        </div>
      </header>
    </div>
    <section class="image_section layout_padding">
      <div class="container">
        <div class="heading_container heading_center">
          <h2>
            View Order
          </h2>
        </div>
  
        
        <br/>
        <div id="menu" class="heading_container heading_center">
        <h5 style="padding-top: 10px;">
          Please enter your table number:
          
        </h5>
        
          <form action="/CustomerViewOrderController" method="post">
            <div>
              <input type="text" class="form-control" name="tableNumber" id="tableNumber" placeholder="Table Number" />
              
            </div>
            <div>
              <button class="yellow-button" type="submit">
                Search
              </button>
            </div>
            
            
           </form>
          </div>
          <div class="filters-content">
            <div class="row grid">
            <% if(menuItemData.length> 0) { %>
              
              <% menuItemData.forEach(function(currentorder) { %>
                  <div class="col-sm-6 col-lg-4 all meat vegetables misc">
                    <div class="menubox">
                        <div class="detail-box">
                          <img src="../images/<%= currentorder.menuName %>.jpg" style="width:  100px; height: 100px; float:right;">
                          <h5>
                            <%= currentorder.menuName %>
                          </h5>
                          <p>
                            Quantity: <%= currentorder.quantity %>
                          </p>
                          <div class="options">
                            <h5>
                              $<%= currentorder.price %> each
                            </h5>
                            
                            <input type="hidden" name="placeholderID" value=<%= currentorder.placeholderID %>>
                            <input type="hidden" name="menuName" value="<%= currentorder.menuName %>">
                            <input type="hidden" name="price" value=<%= currentorder.price %>>
                            <input type="hidden" name="quantity" value=<%= currentorder.quantity %>>
                            
                          </div>
                      </div>
                    </div>
                  </div>
                <% }); %>
            <% } else { %>
            <% } %>
            </div>
          </div>
          <% if(menuItemData.length> 0) { %>
            <div class="heading_container heading_center" style="padding-top:50px;">
              <h3>
                <% pricing = pricing.toFixed(2) %>
                Total Price: $<%= pricing %>
              </h3>
            </div>
            <% } else { %>
              <% } %>
        </div>
    </section>


    <script src="../js/jquery-3.4.1.min.js"></script>
    <!-- bootstrap js -->
    <script src="../js/bootstrap.js"></script>
    <!-- isotope js -->
    <script src="https://unpkg.com/isotope-layout@3.0.4/dist/isotope.pkgd.min.js"></script>
    <!-- custom js -->
    <script src="../js/custom.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" ></script>
    <script>
      $(document).ready(function () {
        $('#table1').DataTable({
          "bFilter": false,
          "lengthChange": false
      });
    });
    </script>
  </body>
</html>