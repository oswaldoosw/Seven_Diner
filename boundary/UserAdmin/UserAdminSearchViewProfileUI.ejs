<!DOCTYPE html>
<html>

<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <link rel="shortcut icon" href="../images/favicon.png" type="">

  <title> Seven Diner </title>

  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="../css/bootstrap.css" />


  <!-- Custom styles for this template -->
  <link href="../css/style.css" rel="stylesheet" />
  <!-- responsive style -->
  <link href="../css/responsive.css" rel="stylesheet" />
  <style>
    h3 {
      display:none;
    }
  </style>
</head>

<body class="sub_page">

    <div class="hero_area">
      <div class="bg-box">
        <img src="../images/hero-bg.jpg" alt="">
      </div>
      <header class="header_section">
        <div class="container">
          <nav class="navbar navbar-expand-lg custom_nav-container ">
            <a class="navbar-brand" href="/UserAdmin">
              <span>
                Seven Diner
              </span>
            </a>
  
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class=""> </span>
            </button>
  
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav  mx-auto" style="padding-left:700px">
                
                <li class="nav-item">
                  <a class="nav-link" onclick="window.location.href='/LogoutController'">Log Out</a>
                
              </li>
              </ul>
              
            </div>
          </nav>
        </div>
      </header>
    </div>
    <section class="form_section layout_padding">
        <div class="container">
          <div class="heading_container">
            <h2>
              Search User Profile
            </h2>
          </div>
          <h4 style="padding-top: 10px;">
            Please enter a role:
          </h4>
            <form action="/UserAdminSearchProfileController" method="post">
              <div>
                <input style="width:25%" type="text" class="form-control" name="roleName" id="roleName" placeholder="Role Name" />
              </div>
              <div>
                <button class="yellow-button" type="submit">
                  Search
                </button>
              </div>
              <br/>
              <br/>
             </form>
         
            <div style="background-color:black;">
                    
              <table id="table1" border="1" style="width:30%; float:left;">
                <thead>
                  <tr style="background-color:orange;">
                    <th>Role ID</th>
                    <th>Role Name</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(data.length> 0) { %>
  
                    <% data.forEach(function(role) { %>
                      <tr>
                        <td style="width:15%; height:35px;"><%= role.roleID %></td>
                        <td style="width:40%; height:35px;"><%= role.roleName %></td>
                      </tr>
                      <% }); %>
      
                  <% } else { %>
                    <h3>No Results</h3>
                  <% } %>
                  
                </tbody>
              </table>
            </div>
        </div>
    </section>
    <script src="../js/jquery-3.4.1.min.js"></script>
  <!-- bootstrap js -->
  <script src="../js/bootstrap.js"></script>
  <!-- isotope js -->
  <script src="https://unpkg.com/isotope-layout@3.0.4/dist/isotope.pkgd.min.js"></script>
  <!-- custom js -->
  <script src="../js/custom.js"></script>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
  <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" ></script>
  <script>
    $(document).ready(function () {
      $('#table1').DataTable({
        "bFilter": false,
        "lengthChange": false,
        "bPaginate": false,
        "bInfo": false
    });
  });
  </script>
</body>
</html>